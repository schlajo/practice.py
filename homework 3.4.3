def average_neg_evens(list):
# need 2 aggregator variables
  sum = 0
  count = 0
  for num in list:
    if num < 0 and num % 2 == 0:
      sum += num
      count += 1
  return (sum/count)

def main():
  print(average_neg_evens([0, 1, 2, -2, -3, -4, 3, 4])) #-3
  
main()

