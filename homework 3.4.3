def count_letter(list, letter):
  count = 0
  letter = letter.lower()
  
  for string in list:
    count += string.lower().count(letter)
  return count

def main():
  list = ["HELLO", "goodbye", "1234 Oooh!"]
  print(count_letter(list, "o"))
  
main()
