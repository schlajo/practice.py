# Assignment of some math functions

from math import sqrt

dec = eval(input("Give me a decimal number. "))
print("The absolute value of", dec, "is", abs(dec),end=". \n")
print(dec, "rounded to 0 decimals places is",round(dec),end=". \n")
print("The square root of the rounded number's absolute value is",sqrt(round(abs(dec))),end=". ")
